<?xml version="1.0" encoding="UTF-8"?>
<cache>
  <persistence-backing class-name="org.homeunix.thecave.moss.jsp.cache.persistence.impl.MemoryPersistence">
    <parameter name="item-count" value="100"/>
  </persistence-backing>
  <persistence-backing class-name="org.homeunix.thecave.moss.jsp.cache.persistence.impl.DiskPersistence">
    <parameter name="cache-path" value="/tmp/foo/bar"/>
  </persistence-backing>
  
  <cache-mapping pattern=".*\.jsp" expiryTime="60"/>
  <cache-mapping pattern=".*\.css" expiryTime="60"/>
  
  <ignore-header>X-Header-1</ignore-header>
  <ignore-header>X-Header-2</ignore-header>  
</cache>